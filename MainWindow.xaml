                        <TextBlock Text="Разъем питания процессора - 8 pin + 4 pin" FontWeight="Normal"/>
                        <TextBlock Text="Количество фаз питания - 16+1+1" FontWeight="Normal"/>
                        <TextBlock Text="Пассивное охлаждение - 3 x M.2 слот, зона VRM, чипсет" FontWeight="Normal" TextWrapping="Wrap"/>
                        <TextBlock Text="Активное охлаждение - нет" FontWeight="Normal"/>

                    </StackPanel>
                </GroupBox>
            </ScrollViewer>


        </Grid>
        <Grid Margin="550,0,0,0" x:Name="Grid_R">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>


            <GroupBox HorizontalAlignment="Center" Height="574"  VerticalAlignment="Top" Width="550" FontSize="14" Padding="5"  FontWeight="Bold" Background="WhiteSmoke" Margin="0,10,0,0">
                <StackPanel Margin="-10,0,0,0" Height="578">
                    <TextBlock HorizontalAlignment="Left" Height="37" Margin="10,10,0,0" TextWrapping="Wrap" Text="Возможные неисправности" VerticalAlignment="Top" Width="360" RenderTransformOrigin="0.5,0.5"/>
