                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="Общие параметры"/>
                        <TextBlock Text="Тип - материнская плата" FontWeight="Normal"/>
                        <TextBlock Text="Модель - GIGABYTE B660 AORUS MASTER DDR4" FontWeight="Normal"/>
                        <TextBlock Text="Код производителя - [B660 AORUS MASTER DDR4]" FontWeight="Normal"/>
                        <TextBlock Text="Год релиза - 2022" FontWeight="Normal"/>
                        <TextBlock Text="Форм-фактор и размеры" FontWeight="Bold"/>
                        <TextBlock Text="Форм-фактор - Standard-ATX" FontWeight="Normal"/>
                        <TextBlock Text="Высота - 305 мм" FontWeight="Normal"/>
                        <TextBlock Text="Ширина - 244 мм" FontWeight="Normal"/>
                        <TextBlock Text="Процессор и чипсет" FontWeight="Bold"/>
                        <TextBlock Text="Сокет - LGA 1700" FontWeight="Normal"/>
                        <TextBlock Text="Чипсет Intel - Intel B660" FontWeight="Normal"/>
                        <TextBlock Text="Совместимые ядра процессоров Intel - Alder Lake, Raptor Lake" FontWeight="Normal"/>
                        <TextBlock Text="Память" FontWeight="Bold"/>
                        <TextBlock Text="Тип поддерживаемой памяти - DDR4" FontWeight="Normal"/>
                        <TextBlock Text="Форм-фактор поддерживаемой памяти - DIMM" FontWeight="Normal"/>
                        <TextBlock Text="Количество слотов памяти - 4 шт" FontWeight="Normal"/>
                        <TextBlock Text="Количество каналов памяти - 2" FontWeight="Normal"/>
                        <TextBlock Text="Максимальный объем памяти - 128 ГБ" FontWeight="Normal"/>
                        <TextBlock Text="Максимальная частота памяти - 3200 МГц" FontWeight="Normal"/>
                        <TextBlock Text="Слоты расширения" FontWeight="Bold"/>
                        <TextBlock Text="Версия PCI Express - 4.0" FontWeight="Normal"/>
                        <TextBlock Text="Количество слотов PCI-E x16 - 3 шт" FontWeight="Normal"/>
                        <TextBlock Text="Количество слотов PCI-E x1 - 0 шт" FontWeight="Normal"/>
                        <TextBlock Text="Контроллеры накопителей" FontWeight="Bold"/>
                        <TextBlock Text="Поддержка NVMe - есть" FontWeight="Normal"/>
                        <TextBlock Text="Версия PCI Express накопителей - 4.0" FontWeight="Normal"/>
                        <TextBlock Text="Количество разъемов M.2 - 3 шт" FontWeight="Normal"/>
                        <TextBlock Text="Разъемы M.2 - 2 x (M) 2260/2280/22110 PCIe 4.0 x4, (M) 2260/2280/22110 PCIe 3.0 x4" FontWeight="Normal" TextWrapping="Wrap"/>
