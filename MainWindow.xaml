                </StackPanel>
            </GroupBox>
            <Button Name="Scan" Click="Scan_Click" Content="Сканировать" FontSize="30" HorizontalAlignment="Center" Height="50" Grid.Row="1" VerticalAlignment="Center" Width="412"/>
            <Label Name="Health_Signal_of_Short_circuit" Content="Состояние:" FontSize="12"  HorizontalAlignment="Left" Height="24" Margin="10,136,0,0" VerticalAlignment="Top" Width="140" FontWeight="Bold"/>
            <Button Name="Short_circuit_button_detailed" Click="Short_circuit_button_detailed_Click"  Content="Подробнее" HorizontalAlignment="Left" Height="40" Margin="394,109,0,0" VerticalAlignment="Top" Width="130"/>



        </Grid>


    </Grid>
</Window>
